@{
    Layout = "";
}
@model CAF.WebSite.QQAuth.Models.ConfigurationModel


<div class="debitoor-instructions alert alert-info">
	<button class="close" data-dismiss="alert">×</button>
	@Html.Raw(T("Plugins.ExternalAuth.QQ.AdminInstruction"))
</div>

<div class="clear"></div>

@Html.Action("SiteScopeConfiguration", "Setting", new { area = "Admin" })

@Html.ValidationSummary(false)

 
@using (Html.BeginForm())
{
    
    <div class="form-body">
        <div class="form-group">
            <label class="control-label col-md-3">@Html.LangLabelFor(model => model.ClientKeyIdentifier)</label>
            <div class="col-md-6">
                <div class="input-group input-medium">
                    @Html.SettingEditorFor(model => model.ClientKeyIdentifier)
                    @Html.ValidationMessageFor(model => model.ClientKeyIdentifier)
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">@Html.LangLabelFor(model => model.ClientSecret)</label>
            <div class="col-md-6">
                <div class="input-group input-medium">
                    @Html.SettingEditorFor(model => model.ClientSecret)
                    @Html.ValidationMessageFor(model => model.ClientSecret)
                </div>
            </div>
        </div>
       
        <div class="form-group">
            <label class="control-label col-md-3"></label>
            <div class="col-md-6">
                <button type="submit" name="save" value="save" class="btn btn-primary">
                    <i class="fa fa-check"></i>&nbsp;@T("Admin.Common.Save")
                </button>
            </div>
        </div>
    </div>
}